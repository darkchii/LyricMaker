                        <!--<Setter Target="ContentFrame.Padding" Value="24,0,24,24"/>--><!--
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>-->
    </Grid>
</Page>
